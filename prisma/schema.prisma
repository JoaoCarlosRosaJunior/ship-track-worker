generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model device {
  id        Int      @id
  available Boolean
  createdAt DateTime @default(now()) @db.Timestamp(0)
}

model location {
  id        Int       @id @default(autoincrement())
  deviceId  Int
  orderId   String?   @db.VarChar(255)
  latitude  Int
  longitude Int
  createdAt DateTime? @default(now()) @db.Timestamp(0)
}

model order {
  id              String   @id @unique(map: "id") @db.VarChar(255)
  deviceId        Int
  senderWallet    String   @db.VarChar(255)
  receiverWallet  String   @db.VarChar(255)
  expectedTime    DateTime @db.Timestamp(0)
  createdAt       DateTime @default(now()) @db.Timestamp(0)
  senderAddress   String   @db.VarChar(255)
  receiverAddress String   @db.VarChar(255)
  delivered       Boolean? @default(false)
  receiverAddrLat Int?
  receiverAddrLng Int?
  senderAddrLat   Int?     @default(-22951804)
  senderAddrLng   Int?     @default(-43210760)
}
